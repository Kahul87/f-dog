<p><%= answer.content %></p>
<p>Posted By <%= answer.user.email %> <%= time_ago_in_words(answer.created_at) %> ago</p>

<% if user_signed_in? %>
    <% if answer.user_id == current_user.id %>
        <%= link_to "Edit", edit_question_answer_path(answer.question, answer) %>
        <%= link_to "Delete", question_answer_path(answer.question, answer), method: :delete, data: { confirm: "Are you sure you want to delete this Answer?"} %>
    <% end %>
<% end %>