<p id="notice"><%= notice %></p>

<h1>Surveys</h1>

<table class="table">
  <thead>
    <tr>
      <th>Size</th>
      <th>Appartment</th>
      <th>Shed</th>
      <th>Energy</th>
      <th>Garden</th>
      <th>Children</th>
      <th>Works Long Hours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.size %></td>
        <td><%= survey.appartment %></td>
        <td><%= survey.shed %></td>
        <td><%= survey.energy %></td>
        <td><%= survey.garden %></td>
        <td><%= survey.children %></td>
        <td><%= survey.wh %></td>
        <td><%= link_to 'Show', survey %></td>
        <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
        <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

