<% @posts.each do |post| %>

<div class = "col-md-4">
    <div class="post">
        <h2 class="post-title"><%= post.title %></h2>
        <%= link_to "View Post", post_path(post), class: "btn btn-default" %>     
    </div>
</div>
<% end %>


<% if user_signed_in? %>
          <p><%= link_to "New Post", new_post_path, class: "navbar navbar-text navbar-link" %></p>
        <% end%>

